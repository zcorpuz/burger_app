<h1>Burgers!</h1>

<h2>The Best Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
        <li class="list-group-item">
            {{burger_name}}{{burgers devoured=false}}<button class="not-devoured ml-2" id="devour" data-id="{{id}}" data-devoured="{{devoured}}">
            Devour!
            </button>
        </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
        <li class="list-group-item">
            {{burger_name}}{{burgers devoured=true}}
        </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Needs to be Eaten
  </div>

  <button type="submit" class="submit">Add Burger</button>
</form>